{
    "type": "css",
    "selector": ".product-item, .product-card, .product-container",
    "extract": {
      "product_name": {
        "type": "text",
        "selector": ".product-title, .product-name, h2, h3",
        "required": true
      },
      "price": {
        "type": "text",
        "selector": ".product-price, .price, .current-price",
        "required": false
      },
      "original_price": {
        "type": "text",
        "selector": ".original-price, .old-price, .compare-price, .was-price",
        "required": false
      },
      "description": {
        "type": "text",
        "selector": ".product-description, .description, .short-description",
        "required": false
      },
      "rating": {
        "type": "text",
        "selector": ".product-rating, .rating, .stars",
        "required": false
      },
      "review_count": {
        "type": "text",
        "selector": ".review-count, .reviews-count, .rating-count",
        "required": false
      },
      "image_url": {
        "type": "attribute",
        "selector": ".product-image img, .product-img img, .main-image img",
        "attribute": "src",
        "required": false
      },
      "product_url": {
        "type": "attribute",
        "selector": "a.product-link, a.product-url, .product-item a, .product-card a",
        "attribute": "href",
        "required": false
      },
      "stock_status": {
        "type": "text",
        "selector": ".stock-status, .availability, .in-stock",
        "required": false
      },
      "brand": {
        "type": "text",
        "selector": ".product-brand, .brand, .manufacturer",
        "required": false
      },
      "sku": {
        "type": "text",
        "selector": ".product-sku, .sku, .product-code",
        "required": false
      }
    },
    "pagination": {
      "next_page": {
        "type": "attribute",
        "selector": "a.next-page, a.pagination-next, .pagination a[rel='next']",
        "attribute": "href"
      },
      "max_pages": 5
    },
    "options": {
      "wait_for_selector": ".product-item, .product-card",
      "wait_time": 5,
      "process_javascript": false
    }
  }